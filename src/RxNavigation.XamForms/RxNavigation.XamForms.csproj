<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>GameCtor.RxNavigation.XamForms</AssemblyName>
    <RootNamespace>GameCtor.RxNavigation.XamForms</RootNamespace>
    <Authors>Colt Alan Bauman</Authors>
    <PackageProjectUrl>https://github.com/cabauman/RxNavigation</PackageProjectUrl>
    <RepositoryUrl>https://github.com/cabauman/RxNavigation</RepositoryUrl>
    <PackageTags>xamarin, ios, android, xamarin.forms, navigation, reactive, rx, reactiveui</PackageTags>
    <PackageReleaseNotes>XF: PushPage with resetStack set to true is now animated (looks much better)</PackageReleaseNotes>
    <Description>Custom navigation for Xamarin using Reactive Extensions</Description>
    <Version>1.0.1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ReactiveUI" Version="9.8.1" />
    <PackageReference Include="System.Reactive" Version="4.1.2" />
    <PackageReference Include="Xamarin.Forms" Version="3.4.0.1009999" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RxNavigation\RxNavigation.csproj" />
  </ItemGroup>

</Project>
